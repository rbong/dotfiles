set rnu

set trash
set history=100
set followlinks
set fastrun
set sortnumbers
set undolevels=100
set novimhelp
set norunexec
set noiec
colorscheme elflord2
set fusehome=/tmp/vifm_FUSE
set timefmt=%m/%d\ %H:%M
set wildmenu
set ignorecase
set smartcase
set nohlsearch
set incsearch
set scrolloff=4
set slowfs=curlftpfs
set statusline="  %t%= %A %10u:%-7g %15s %20d  "
mark b ~/bin/
mark d ~/Downloads
mark f ~/Documents
mark F ~/.vifm
mark p ~/programs
mark i ~/Images
mark m ~/Music
mark V ~/Videos
mark v ~/.vim
mark h ~/
mark r /
command df df -h %m 2> /dev/null
command diff vim -d %f %F
command zip zip -r %f.zip %f
command run !! ./%f
command make !!make
command vgrep vim "+grep %a"
" Pdf
filetype *.pdf apvlv %f &> /dev/null &
" Torrent
filetype *.torrent ktorrent %f &> /dev/null &
" PostScript
filextype *.ps,*.ps.gz gv %c %i &
" Djvu
filextype *.djvu djview %f &> /dev/null &
" Audio
filetype *.wav,*.mp3,*.flac,*.ogg,*.m4a
       \ {Play using ffplay}
       \ ffplay %c,
       \ {Play using MPlayer}
       \ play_music %f,
fileviewer *.mp3 mp3info
" Video
filextype *.avi,*.mp4,*.m4v,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.vob,*.flv,*.webm,*.mov
        \ mplayer %f &> /dev/null &,
fileviewer *.avi,*.mp4,*.m4v,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.vob,*.flv,*.web,*.mov
         \ ffprobe -show_files -pretty %f 2> /dev/null
" Web
filetype *.html,*.htm links,mozilla,firefox %f %i &
" Object
filetype *.o nm %f | less
" Image
filetype *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.xpm
        \ {View in sxiv}
        \ iv %c &> /dev/null &,
        \ {View in gpicview}
        \ gpicview %c,
        \ {View in feh}
        \ feh
fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.xpm convert -identify %f -verbose /dev/null
" MD5
filetype *.md5
       \ {Check MD5 hash sum}
       \ md5sum -c %f,

" FuseZipMount
filetype *.zip,*.jar,*.war,*.ear
       \ {Mount with fuse-zip}
       \ FUSE_MOUNT|fuse-zip %SOURCE_FILE %DESTINATION_DIR,
       \ {View contents}
       \ zip -sf %c | less,
       \ tar -xf %c,
fileviewer *.zip,*.jar,*.war,*.ear zip -sf %c
" ArchiveMount
filetype *.tar.bz2,*.tbz2,*.tgz,*.tar.gz
       \ {Mount with archivemount}
       \ FUSE_MOUNT|archivemount %SOURCE_FILE %DESTINATION_DIR,
fileviewer *.tgz,*.tar.gz tar -tzf %c
fileviewer *.tar.bz2,*.tbz2 tar -tjf %c
" Rar2FsMount
filetype *.rar
       \ {Mount with rar2fs}
       \ FUSE_MOUNT|rar2fs %SOURCE_FILE %DESTINATION_DIR,
" IsoMount
filetype *.iso
       \ {Mount with fuseiso}
       \ FUSE_MOUNT|fuseiso %SOURCE_FILE %DESTINATION_DIR,
" SshMount
filetype *.ssh
       \ {Mount with sshfs}
       \ FUSE_MOUNT2|sshfs %PARAM %DESTINATION_DIR,
" FtpMount
filetype *.ftp
       \ {Mount with curlftpfs}
       \ FUSE_MOUNT2|curlftpfs -o ftp_port=-,,disable_eprt %PARAM %DESTINATION_DIR,
" Fuse7z
filetype *.7z
       \ {Mount with fuse-7z}
       \ FUSE_MOUNT|fuse-7z %SOURCE_FILE %DESTINATION_DIR,
" Office files
filextype *.rtf,*.doc,*.docx,*.xls,*.xlsx libreoffice %f &
fileview *.docx, docx2txt.pl %f -
" Qt projects
filextype *.pro qtcreator %f &
" Directories
filextype */
        \ {View in thunar}
        \ Thunar %f &,
fileview */ tree %f
set vifminfo=dhistory,savedirs,chistory,state,tui,shistory,
    \phistory,dirstack,registers,bookmarks
nmap s :shell<cr>
nmap S :sort<cr>
nmap w :view<cr>
nmap o :!vim --remote-tab-silent %f<cr>
nmap O :!vim %f<cr>
nmap go '
nmap gb :file &<cr>l
nmap yd :!echo %d | xclip %i<cr>
nmap yf :!echo %c:p | xclip %i<cr>
nmap I cw<c-a>
nmap cc cw<c-u>
nmap A cw<c-w>
nmap \t :!xterm &<cr>
nmap \c :execute ':!vim $MYVIFMRC' | restart<cr>
nmap \C :!vim --remote-tab-silent $MYVIFMRC &<cr>
nmap \w :set wrap!<cr>
nmap <f1> :help<cr>
nmap <f3> :!less %f<cr>
nmap <f4> :edit<cr>
nmap <f5> :copy<cr>
nmap <f6> :move<cr>
nmap <f7> :mkdir<space>
nmap <f8> :delete<cr>
nmap ~ :cd ~<cr>
nmap ` :cd %D<cr>
nno s :!zsh<CR>
set vicmd="nvim"
set vifminfo=bookmarks,tui,state,cs,savedirs,dhistory,chistory,shistory,phistory,fhistory,dirstack,registers
set incsearch
nno <leader>h set hlsearch!
set nohlsearch
set smartcase
set ignorecase
set wildmenu
nno cc cw<C-u>
colorscheme Solarized
set dotdirs=none
set cpoptions-=t

com dupdir :!export f=%D; mkdir "${f##*/}"
com mfoura :!for i in *.m4a; do m4a2mp3 "$i" %D; done
com flac :!for i in *.flac; do flac2mp3 "$i" %D; done
com wav :!for i in *.wav; do flac2mp3 "$i" %D; done
com wma :!for i in *.wma; do wma2mp3 "$i" %D; done
com donemsg :!st -e dialog --msgbox "Completed operation." 0 0 & &
com cueape :!apecuesplit; rm 00\ pregap.mp3; mv *.mp3 %D
com cueflac :!flaccuesplit; rm 00\ pregap.mp3; mv *.mp3 %D
