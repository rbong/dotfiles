let configpath = '/home/roger/.cvimrc'
set localconfig

""" Misc. settings


set hud
set nosmoothscroll
set noautofocus
set nonumerichints
set incsearch
set smartcase
set completeonopen

let searchlimit = 20
let scrollstep = 70
let barposition = 'bottom'
let hintcharacters = 'sdfjklagh'
let mapleader = '<Space>'

let blacklists = ['https://mail.google.com/*', '*://mail.google.com/*', '@https://mail.google.com/mail/*']


""" Search engine settings


let defaultengine = 'startpage'
let searchengine startpage = ['http://www.startpage.com', 'https://www.startpage.com/do/dsearch?cat=web&pl=opensearch&query=']

let completionengines = ['startpage', 'wikipedia', 'youtube']

let searchalias w = 'wikipedia'
let searchalias sp = 'startpage'
let searchalias g = 'google'
let searchalias y = 'youtube'


""" Quickmarks

let qmark e = 'chrome://extensions'
let qmark d = 'chrome://downloads'
let qmark s = 'chrome://settings'


""" Movement mappings


" by default s is mapped to scrollDown
unmap s
" by default w is mapped to scrollUp
unmap w

unmap d
map <C-d> scrollPageDown
unmap u
unmap e
map <C-u> scrollPageUp

" Disabled: <C-n> is currently unmappable in Brave
" map <C-n> scrollFullPageDown
" map <C-p> scrollFullPageUp


""" Link hint mappings


map w createHintWindow

unmap mf
map ;f createMultiHint

" by default I is mapped to :history
unmap I
" relies on cvim_server.py running
" TODO: run server
map I createEditHint

" by default ;* is mapped to setMark
unmap ;*

map ;m fullImageHint

unmap mr
map ;R multiReverseImage

unmap my
map ;Y multiYankUrl

unmap gy
map ;y yankUrl

unmap gr
map ;r reverseImage


""" Quickmark mappings


map gt* openQuickMarkTabbed


""" Misc. mappings


" by default a is mapped to :tabnew google
unmap a

" by default R is mapped to nextTab
unmap R
map R reloadTabUncached

map m* setMark

map cR reloadAllTabs

map zm toggleImageZoom

" by default gd is mapped to chrome://downloads
unmap gd
" by default ge is mapped to chrome://extensions
unmap ge

map Y yankDocumentUrl

map yw yankWindowUrls

" by default B is mapped to :buffer<Space>
unmap B
unmap b
map B :bookmarks<Space>

" by default <C-b> is mapped to createBookmark
" this makes it too easy to accidentally create a bookmark, use I<C-d> instead
unmap <C-b>

map ZZ quitChrome

unmap g-
map <C-x> decrementURLPath
unmap g+
map <C-a> incrementURLPath


""" Tab navigation mappings

" by default gT/E is mapped to previousTab
unmap gT
unmap E

" by default D is mapped to goForward
unmap D
unmap x
map dd closeTab
map D closeTab
unmap gxT
map dh closeTabLeft
unmap gxt
map dl closeTabRight
unmap gx0
map d0 closeTabsToLeft
unmap gx$
map d$ closeTabsToRight

unmap X
map u lastClosedTab

" by default S is mapped to goBack
unmap S

map b :buffer<Space>


""" Find mode mappings


" sorry nothing


""" Visual/caret mode mappings


" sorry nothing


""" Text box mappings


iunmap <C-i>
imap <C-a> beginningOfLine

iunmap <C-o>
imap <C-x> deleteToEnd

iunmap <C-y>
imap <C-w> deleteWord

imap <C-S-a> selectAll

imap <C-o> editWithVim
